# PaperLens Environment Variables

# =============================================================================
# LLM Configuration
# =============================================================================
# Get free API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Alternative: OpenAI (if you prefer)
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Vector Database (Qdrant)
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=papers

# =============================================================================
# Embedding Model
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/allenai-specter

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Frontend Configuration
# =============================================================================
STREAMLIT_PORT=8501

# =============================================================================
# External APIs (Optional - for enrichment)
# =============================================================================
# Semantic Scholar API (optional, has free tier)
# SEMANTIC_SCHOLAR_API_KEY=your_key_here

# =============================================================================
# Agent Configuration
# =============================================================================
AGENT_MAX_ITERATIONS=5
AGENT_TEMPERATURE=0.7
AGENT_TIMEOUT=60

# =============================================================================
# Memory Configuration
# =============================================================================
MEMORY_DB_PATH=data/memory.db
MEMORY_WORKING_SIZE=20
MEMORY_EPISODIC_LIMIT=100
MEMORY_BELIEF_DECAY=0.95

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Development
# =============================================================================
DEBUG=false
