# PaperLens Environment Variables

# =============================================================================
# LLM Configuration
# =============================================================================
# Primary provider (cerebras recommended for higher free-tier rate limits)
LLM_PROVIDER=cerebras
LLM_MODEL=llama-3.3-70b

# Cerebras API Key (free at https://cloud.cerebras.ai)
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Groq API Key (fallback, free at https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key_here

# Alternative: OpenAI (if you prefer)
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Vector Database (Qdrant)
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=papers

# =============================================================================
# Embedding Model
# =============================================================================
EMBEDDING_MODEL=allenai/specter2_base

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Frontend Configuration
# =============================================================================
STREAMLIT_PORT=8501

# =============================================================================
# External APIs (Optional - for enrichment)
# =============================================================================
# Semantic Scholar API (optional, has free tier)
# SEMANTIC_SCHOLAR_API_KEY=your_key_here

# =============================================================================
# Agent Configuration
# =============================================================================
AGENT_MAX_ITERATIONS=3
AGENT_TEMPERATURE=0.7
AGENT_TIMEOUT=60
AGENT_LITE_MODE=true

# =============================================================================
# Memory Configuration
# =============================================================================
MEMORY_DB_PATH=data/memory.db
MEMORY_WORKING_SIZE=20
MEMORY_EPISODIC_LIMIT=100
MEMORY_BELIEF_DECAY=0.95

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Development
# =============================================================================
DEBUG=false
